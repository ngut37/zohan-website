{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@api/*": ["api/*"],
      "@utils/*": ["utils/*"],
      "@hooks/*": ["hooks/*"],
      "@config/*": ["config/*"],

      // global components
      "@atoms": ["atoms"],
      "@molecules/*": ["molecules/*"],
      "@organisms/*": ["organisms/*"],
      "@templates/*": ["templates/*"],
      "@modules/*": ["modules/*"],
      
      "@messages": ["messages"],
      "@types/*": ["types/*"],
      "@styles": ["styles"],
      "@styles/*": ["styles/*"],
    },
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "rendererOptions": {
            "sass": { "includePaths": ["./"] }
          }
        }
      }
    ]
  },
}
